{
  "extends": ["plugin:react/recommended", "plugin:import/errors", "plugin:import/warnings", "prettier"],
  "plugins": ["react-hooks", "prettier"],
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "rules": {
    "prettier/prettier": ["error"],
    "no-console": "error",
    "no-alert": "error",
    "linebreak-style": ["warn", "unix"],
    "react/require-default-props": "error",
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": "warn",
    "react/no-unescaped-entities": "off",
    "import/default": "off"
  }
}
